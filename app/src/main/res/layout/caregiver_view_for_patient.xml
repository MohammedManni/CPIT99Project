<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/patientMedicationLog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"
            android:text="Medication log"
            android:background="@color/material_dynamic_neutral0"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColorHighlight="@color/design_default_color_primary"
            android:shadowColor="@color/black"
            />

        <Button
            android:id="@+id/patientEvents"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="Events"
            android:background="@color/material_dynamic_neutral0"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/addMedicationForPatient"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="Add Medication"
            android:background="@color/material_dynamic_neutral0"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>