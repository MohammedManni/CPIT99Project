<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbarCP"
        ></include>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/imageCaregiver"
        android:layout_width="161dp"
        android:layout_height="163dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="84dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline31"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonSchedule"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:text="SCHEDULE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCaregiver" />

    <Button
        android:id="@+id/buttonMedLogINcaregiver"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:text="MEDICATION LOG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSchedule" />

    <Button
        android:id="@+id/buttonTimelineINcaregiver"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:text="TIMELINE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMedLogINcaregiver" />
</androidx.constraintlayout.widget.ConstraintLayout>