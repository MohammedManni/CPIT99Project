<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <include
        android:id="@+id/toolbarMedication"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="1dp"></include>


    <TextView
        android:id="@+id/MedicineName"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:textSize="15dp"
        android:text="Medicine Name :"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMedication" />

    <TextView
        android:id="@+id/DurtaionTextView"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:text="Duration :"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="Amount :"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfTimeView" />

    <TextView
        android:id="@+id/numberOfTimeView"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:text="Number of time per day :"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MedicineName" />


    <EditText
        android:id="@+id/EditMedicineName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:hint="Medicine name"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMedication" />

    <Button
        android:id="@+id/Add_medicine"
        android:layout_width="384dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#5B7DB1"
        android:text="Add Medicine"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/numberDurationSpin"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="#F7E2E2"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/TextDurationSpin"
        app:layout_constraintTop_toBottomOf="@+id/amountNumberSpinner" />

    <Spinner
        android:id="@+id/RepeatSpin"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="122dp"
        android:background="#F7E2E2"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberDurationSpin" />

    <Spinner
        android:id="@+id/numberOfTimeSpin"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="#F7E2E2"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/everyH"
        app:layout_constraintTop_toBottomOf="@+id/EditMedicineName" />

    <Spinner
        android:id="@+id/amountNumberSpinner"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="#F7E2E2"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/amountTextSpinner"
        app:layout_constraintTop_toBottomOf="@+id/numberOfTimeSpin" />

    <Spinner
        android:id="@+id/amountTextSpinner"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:background="#F7E2E2"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditMedicineName" />

    <Spinner
        android:id="@+id/TextDurationSpin"
        android:layout_width="87dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#F7E2E2"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountTextSpinner" />

    <Button
        android:id="@+id/Start_day_DATE"
        android:layout_width="274dp"
        android:layout_height="59dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="69dp"
        android:backgroundTint="#5B7DB1"
        android:padding="15dp"
        android:text="Start day DATE"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RepeatText" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TimePicker
        android:id="@+id/timePickerMedicine"
        android:layout_width="212dp"
        android:layout_height="94dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="38dp"
        android:background="#F7E2E2"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/Add_medicine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/StartDayTime"
        app:layout_constraintTop_toBottomOf="@+id/Start_day_DATE" />

    <TextView
        android:id="@+id/StartDayTime"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="66dp"
        android:text="Please choose the start time :"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Add_medicine"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/everyH"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="27dp"
        android:elegantTextHeight="true"
        android:text="Every 12 hr"
        android:textAlignment="center"

        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/amountTextSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditMedicineName" />

    <TextView
        android:id="@+id/RepeatText"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="Repeat every :"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DurtaionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>